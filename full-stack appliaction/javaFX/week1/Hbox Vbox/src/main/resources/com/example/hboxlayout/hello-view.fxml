<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox fx:controller="com.example.hboxlayout.Controller"
      alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      style="-fx-border-color:green;-fx-border-width:3;-fx-border-style:dashed"
      spacing="10">
    <!-- alignment 是button出现的区域。 spacing是button之间的距离。 -->
    <padding>
        <Insets bottom="10" right="10">
        </Insets>
    </padding>

    <Button text="Okay" prefWidth="90"/>
    <Button text="Cancel" prefWidth="90"/>
    <Button text="Help" prefWidth="90"/>
    <Button text="Exit" prefWidth="90"/>
</VBox>