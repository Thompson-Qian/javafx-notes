<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          hgap="20" vgap="20"
          fx:controller="com.example.events.Controller">

    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0"
               onKeyReleased="#handleKeyReleased"/>
    <Button fx:id="HelloButton" text="新年快乐" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onButtonClicked"/>
    <Button fx:id="ByeByeButton" text="再见" GridPane.rowIndex="2" GridPane.columnIndex="0"
            onAction="#onButtonClicked"/>


</GridPane>

